
    <h1>Create a New Figure</h1>

    <form action="/figures" method="POST">

      <p><h4><label for="figure_name">Name</label></h4>
      <input type="text" id="figure_name" name="figure[name]" value=""></p>

      <p><h4>Title</h4><% @titles.each do |title| %>
        <label for="title_<%=title.id%>"><%= title.name %></label>
        <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%= title.id%>">
      <% end %></p>
     
      <p><h2>Choose a Landmark</h2><% @landmarks.each do |landmark| %>
        <label for="landmark_<%=landmark.id%>"><%= landmark.name %></label>
        <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%= landmark.id%>">
      <% end %></p>

      <p><h2><label>Create New Title:</label></h2>
      <input type="text" id="new_title" name="title[name]" value=""></p>
     

      <p><h2><label for="new_landmark">Create New Landmark:</label></h2>
      <input type="text" id="new_landmark" name="landmark[name]" value=""></p>

      <input type="submit" id="submit" value="Create New Figure">
    </form>
