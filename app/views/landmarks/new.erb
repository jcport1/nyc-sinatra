<h1>Create New Landmark</h1>

<!-- add content here -->

<form action="/landmarks" method="POST">
<label for="landmark[name]">Name</label>
<input type="text" id="landmark_name" name="landmark[name]" value="">
<label for="landmark[year_completed]">Year</label>
<input type="text" id="landmark_year_completed" name="landmark[year_completed]" value="">

  Select a Figure
  <select name="landmark[figure_id]">
  <% @figures.each do |figure|%>
    <option value="<%= figure.id %>"><%= figure.name %></option>
    <% end %>
    </select>
<p><input type="submit" name="submit" value="Create New Landmark"></p>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
